@inject AppService AppService
@inject ISnackbar Snackbar
@inject HttpClient HttpClient

@if (record == null)
{
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">Update Opportunity</MudText>
        </TitleContent>
        <DialogContent>
            <MudText>Loading...</MudText>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="OnCancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" Disabled="true">Update</MudButton>
        </DialogActions>
    </MudDialog>
}
else
{
    <EditForm Model="@record" OnValidSubmit="@OnSubmit">
        <DataAnnotationsValidator />
        <MudDialog>
            <TitleContent>
                <MudText Typo="Typo.h6">Update Opportunity</MudText>
            </TitleContent>
            <DialogContent>
                <MudNumericField @bind-Value="record.Id" For="@(() => record.Id)" Label="Id" ReadOnly="true" />
                <MudTextField @bind-Value="record.Name" For="@(() => record.Name)" Label="Name" />
                <MudNumericField @bind-Value="record.Value" For="@(() => record.Value)" Label="Value ($)" />
                <MudNumericField @bind-Value="record.Probability" For="@(() => record.Probability)" Label="Probability (%)" Min="0" Max="100" />
                <MudTextField Format="s" InputType="InputType.DateTimeLocal" @bind-Value="record.EstimatedCloseDate" For="@(() => record.EstimatedCloseDate)" Label="Estimated Close Date" />
                <MudSelect @bind-Value="record.Stage" Label="Stage" AnchorOrigin="Origin.BottomCenter">
                    <MudSelectItem Value="@("Prospecting")">Prospecting</MudSelectItem>
                    <MudSelectItem Value="@("Qualification")">Qualification</MudSelectItem>
                    <MudSelectItem Value="@("Proposal")">Proposal</MudSelectItem>
                    <MudSelectItem Value="@("Negotiation")">Negotiation</MudSelectItem>
                    <MudSelectItem Value="@("Closed Won")">Closed Won</MudSelectItem>
                    <MudSelectItem Value="@("Closed Lost")">Closed Lost</MudSelectItem>
                </MudSelect>
                <MudSelect T="long?" @bind-Value="record.CustomerId" Label="Customer" AnchorOrigin="Origin.BottomCenter" Clearable="true">
                    @if (customers != null)
                    {
                        @foreach (var customer in customers)
                        {
                            <MudSelectItem T="long?" Value="@customer.Id">@customer.Name</MudSelectItem>
                        }
                    }
                </MudSelect>
                <MudSelect T="long?" @bind-Value="record.ContactId" Label="Contact" AnchorOrigin="Origin.BottomCenter" Clearable="true">
                    @if (contacts != null)
                    {
                        @foreach (var contact in contacts)
                        {
                            <MudSelectItem T="long?" Value="@contact.Id">@contact.Name</MudSelectItem>
                        }
                    }
                </MudSelect>
                <MudFileUpload T="IBrowserFile" FilesChanged="@(async args => record.Icon = await UploadImageAsync(args, 256, 256))" Accept=".png,.jpg,.jpeg">
                    <ActivatorContent>
                        <MudIconButton Color="Color.Info"
                                       Icon="@Icons.Material.Filled.PhotoCamera">
                        </MudIconButton>
                    </ActivatorContent>
                </MudFileUpload>
                @if (!string.IsNullOrEmpty(record.Icon))
                {
                    <MudImage Src="@GetAbsoluteUri(record.Icon)" Style="width:128px;height:128px;object-fit:contain;" Class="mt-1" />
                }
                <MudTextField @bind-Value="record.Notes" For="@(() => record.Notes)" Label="Notes" />

                <TagSelector EntityType="Opportunity" EntityId="@(record.Id ?? 0)" />
                <EntityAttachments EntityType="Opportunity" EntityId="@(record.Id ?? 0)" />
                <EntityTimeline EntityType="Opportunity" EntityId="@(record.Id ?? 0)" />
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="OnCancel">Cancel</MudButton>
                <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary">Update</MudButton>
            </DialogActions>
        </MudDialog>
    </EditForm>
}

@code {
    [Parameter]
    public long Id { get; set; }

    [CascadingParameter]
    IMudDialogInstance? MudDialog { get; set; }

    private Opportunity? record;
    private Customer[]? customers;
    private Contact[]? contacts;

    private string GetAbsoluteUri(string uri)
    {
        if (!uri.StartsWith("/"))
        {
            return uri;
        }

        var baseUri = HttpClient.BaseAddress;

        if (baseUri == null)
        {
            throw new Exception("Unable to determine base address");
        }

        Uri absolute = new(baseUri, uri);

        return absolute.ToString();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            record = await AppService.GetOpportunityByIdAsync(Id);
            customers = await AppService.ListCustomerAsync();
            contacts = await AppService.ListContactAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
        }
    }

    private void OnCancel()
    {
        MudDialog?.Cancel();
    }

    private async Task OnSubmit()
    {
        if (record == null)
        {
            return;
        }

        try
        {
            await AppService.UpdateOpportunityAsync(Id, record);
            MudDialog?.Close();
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
        }
    }

    private async Task<string?> UploadImageAsync(IBrowserFile file, int maxWidth = 256, int maxHeight = 256)
    {
        if (file.ContentType != "image/png" && file.ContentType != "image/jpeg")
        {
            Snackbar.Add("Only PNG or JPEG images can be uploaded.", Severity.Error);
            return null;
        }

        var image = await file.RequestImageFileAsync("image/png", maxWidth, maxHeight);

        try
        {
            return await AppService.UploadImageAsync(image);
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
        }

        return null;
    }
}
