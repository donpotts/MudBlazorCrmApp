﻿<MudDialog>
    <DialogContent>
        <MudForm Model="PassedData">
            <MudPaper Elevation="25" Class="pa-2 rounded-lg">
                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="PassedData.Name" Label="Name" Placeholder="Name" DisableUnderLine="true" Margin="Margin.Dense" Class="mx-2 mt-n2"></MudTextField>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="PassedData.Description" Label="Description" Placeholder="Description" DisableUnderLine="true" Margin="Margin.Dense" Class="mx-2 mt-n2"></MudTextField>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="PassedData.FollowupDate" Label="Follow-up Date" Placeholder="Followup Date" DisableUnderLine="true" Margin="Margin.Dense" Class="mx-2 mt-n2"></MudTextField>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="PassedData.DueDate" Label="Due Date" Placeholder="Due Date" DisableUnderLine="true" Margin="Margin.Dense" Class="mx-2 mt-n2"></MudTextField>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="PassedData.Notes" Label="Notes" Placeholder="Notes" DisableUnderLine="true" Margin="Margin.Dense" Class="mx-2 mt-n2"></MudTextField>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } 

    [Parameter]
    public TodoTask PassedData { get; set; } = new TodoTask { };

    void Submit()
    {
        MudDialog.Close<TodoTask>(PassedData);
    }
    void Cancel() => MudDialog.Cancel();
}